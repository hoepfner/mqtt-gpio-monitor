[global]
MODULE             = gpio
DEBUG              = True

MQTT_HOST          = localhost
MQTT_PORT          = 1883
MQTT_USERNAME      = 
MQTT_PASSWORD      = 
MQTT_TLS_PROTOCOL  = ""
MQTT_CERT_PATH     = ""
MQTT_TLS_INSECURE  = ""
#MQTT_TLS_PROTOCOL  = tlsv1_2
#MQTT_CERT_PATH     = /path/to/ca.pem 
